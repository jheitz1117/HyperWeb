<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @@jheitz1117</title>

    @Styles.Render("~/bundles/icons", "~/bundles/styles")

    <script src="~/Content/Scripts/Lib/require.js" data-main="main"></script>
    <script>
        requirejs.config({
            baseUrl: '@Url.Content("~/Content/Scripts/")',
            paths: {
                jquery: 'lib/jquery',
                bootstrap: 'lib/bootstrap',
                validation: 'lib/jquery.validate.unobtrusive'
            },
            shim: {
                'bootstrap': {
                    deps: ['jquery']
                },
                'validation': {
                    deps: ["lib/jquery.validate"]
                },
                'lib/jquery.validate': {
                    deps: ["jquery"]
                }
            },
            deps: ['jquery', 'bootstrap']
        });
    </script>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#site-nav" aria-expanded="False">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/"><i class="fa-at"></i> Josh Heitz</a>
                <span class="clearfix visible-xs"><!--Nav fix because we're using bootstrap grid system to center the nav in bigger viewports--></span>
                <div id="site-nav" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="~/">Home <span class="sr-only">(current)</span></a></li>
                        <li><a href="@Url.Action("About", "Home")">About</a></li>
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Projects")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Projects <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index", "Projects")">All Projects</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("HyperSOAFramework", "Projects")">HyperSOA Framework</a></li>
                                <li><a href="@Url.Action("HyperCryptoUtility", "Projects")">Hyper Crypto Utility</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="container body-content" style="min-height: 25em">
    @RenderBody()
</div>

<footer class="navbar navbar-default">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-4 text-center">
                        <span>col1</span>
                    </div>
                    <div class="col-xs-4 text-center">
                        <span>col2</span>
                    </div>
                    <div class="col-xs-4 text-center">
                        <span>col3</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

@RenderSection("scripts", required: false)
</body>
</html>
